<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER"
      spacing="20.0"
        xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sistemacaixa.CaixaController"
            prefHeight="400.0" prefWidth="600.0">

    <Label>Caixa de Supermercado</Label>

    <HBox spacing="20.0"
    >
        <Label>Código: </Label>
        <Label>Quantidade: </Label>
    </HBox>
    <HBox spacing="20.0"
    >
        <TextField prefWidth="50.0" fx:id="TextCodigo" onKeyTyped="#GetProduct"/>
        <TextField prefWidth="50.0" fx:id="TextQuantidade"/>
    </HBox>

    <Label fx:id="LabelDescricaoProduto"/>
    <Button fx:id="ButtonAdicionaLista" onMouseClicked="#OnButtonAdicionaListaClicked">Adicionar à Lista</Button>
    <Label>Lista de Produtos:</Label>
    <ListView fx:id="LabelListaProdutos"></ListView>
    <Button fx:id="ButtonExluiLista" onMouseClicked="#OnButtonExluiListaClicked">Excluir</Button>
    <HBox>
        <Label>Total:</Label>
        <Label>Valor Pago:</Label>
        <Label>Troco:</Label>
    </HBox>

    <HBox>
        <Label fx:id="LabelTotal"/>
        <Label fx:id="LabelValorPago"/>
        <Label fx:id="LabelTroco"/>
    </HBox>
</VBox>
